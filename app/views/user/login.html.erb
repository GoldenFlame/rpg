<% if flash[:notice] %>
<div style="font-family:'Trebuchet MS'; color:#FF0000; font-size:14px;">
<%= flash[:notice] %>
</div>
<% end %>
<!--creates form, exectues the authenticate method when the submit button is clicked-->
<center>
<%= form_tag({:action => 'authenticate'}, {:method => 'get'}) %>
User name: 
<%= text_field("userform", "name",:size=>"20" ) %><BR>
Password:
<%= password_field("userform", "password",:size=>"20" )%><br>
<input type="submit" value=" LOGIN " />

<%=link_to "Register", register_path%><br>
</center>